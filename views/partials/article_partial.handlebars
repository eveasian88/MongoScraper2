<div class='col-lg-4 col-md-6 mb-4'>
  <div class='card' data-id=" + data[i]._id + ">
    <img class='card-img-top' src="{{ this.image }}" alt=''>
    <div class='card-body'>
      <a href="{{ this.link }}">
        <h4 class='card-title'> {{ this.title }} </h4>
      </a>
      <p class='card-text'></p>
    </div>
    <div class='card-footer'>

      {{#unless this.saved }}
      <a data-id=" {{ this._id }} " class='save-btn btn btn-secondary'>
        Save Article
      </a>
      {{/unless }}


      {{#if this.unsaved }}
      {{#else this.unsaved }}
      <a data-id=" {{ this._id }} " class='unsave-btn btn btn-secondary'>
        Unsave Article
      </a>
      {{/else }}
      {{/if }}




    </div>
  </div>
</div>